doctype
html
  head
    meta(charset='utf-8')
    title Reddit Steam Tools
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet", href="style/style.css")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    #script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
    script(src='scripts/handlebars-v3.0.3.js')

    script#entry-template(type="text/x-handlebars-template")
      ul.list-group
      | {{#each apps}}
      a.list-group-item(onclick="addApp({{this}})") {{this.name}}
      | {{/each}}
  
    body
      div.row
        div.col-md-2
        div.col-md-8.main-container
          h1 Reddit Steam Tools (Alpha as fuark)

          div#search
            div.input-group
              input#searchString.form-control(type="text", placeholder="Search")
              span.input-group-addon(onclick="onSearchApp()")
                i.glyphicon.glyphicon-search
                
          div.row
            div.col-md-6
              h3 Results
              div#results
            div.col-md-6
              h3 Included              
              div#apps
              
          div#loading
            h2.text-center Loading. Wait for it...
              
        div.col-md-2
      
      script(src='scripts/app.js')
